<Window x:Class="MathExpressions.InputFormulaDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MathExpressions"
        mc:Ignorable="d"
        Title="Добавление формулы" Height="120" Width="300">
    <StackPanel>
        <TextBlock Text="Введите формулу" Margin="2,0,2,5" />
        <TextBox x:Name="FormulaTextBox" Margin="2,0,2,5" Height="24" VerticalContentAlignment="Center" />
        <Button Content="OK" Click="OKButton_Click" Width="50" HorizontalAlignment="Right" Margin="0,0,2,0" />
    </StackPanel>
</Window>
